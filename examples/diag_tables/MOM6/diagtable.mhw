# WMT for marine heatwaves, with three-day temporal resolution
# 
# This file contains a comprehensive list of diagnostics for calculation of
# watermass transformations (in temperature coordinates) using offline
# regridding of depth-binned diagnostics at three-day temporal resolution.
# Date: 05/08/2025
# Contact:      Henri F. Drake, henri.drake@noaa.gov

### file formats
"ocean_daily", 1, "days", 1, "days", "time", 1, "years"
"ocean_threeday", 3, "days", 1, "days", "time", 1, "years"
"ocean_threeday_zup", 3, "days", 1, "days", "time", 1, "years"
"ocean_threeday_zup_snap", 3, "days", 1, "days", "time", 1, "years"

# SURFACE OCEAN FIELDS, saved at three-day resolution
### state variables at surface (required to convert freshwater flux into salt and heat tendencies)
"ocean_model",  "tos",                                     "tos",                                  "ocean_threeday",           "all", "mean", "none",2
"ocean_model",  "sos",                                     "sos",                                  "ocean_threeday",           "all", "mean", "none",2

### surface heat fluxes
"ocean_model",  "hfds",                                  "hfds",                                   "ocean_threeday",        "all", "mean", "none",2
"ocean_model",  "hflso",                                 "hflso",                                  "ocean_threeday",        "all", "mean", "none",2
"ocean_model",  "hfsso",                                 "hfsso",                                  "ocean_threeday",        "all", "mean", "none",2
"ocean_model",  "rsntds",                                "rsntds",                                 "ocean_threeday",        "all", "mean", "none",2
"ocean_model",  "rlntds",                                "rlntds",                                 "ocean_threeday",        "all", "mean", "none",2
"ocean_model",  "heat_content_surfwater",                "heat_content_surfwater",                 "ocean_threeday",        "all", "mean", "none", 2

# INTERIOR OCEAN FIELDS, binned by upper ocean depth level
