"ocean_model_zup", "thkcello",                            "thkcello",                              "ocean_threeday_zup",     "all", "mean", "none",2
"ocean_model_zup", "thetao",                              "thetao",                                "ocean_threeday_zup",     "all", "mean", "none",2
"ocean_model_zup", "so",                                  "so",                                    "ocean_threeday_zup",     "all", "mean", "none",2
"ocean_model_zup", "o2",                                  "o2",                                    "ocean_threeday_zup",     "all", "mean", "none",2
"ocean_model_zup", "hplus",                               "hplus",                                 "ocean_threeday_zup",     "all", "mean", "none",2

